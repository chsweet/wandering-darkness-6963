<h1>All Plots</h1>
<br>
<% @plots.each do |plot| %>
  <section id="plot-<%= plot.id %>">
    <p>Plot Number: <%= plot.number %></p>
    <% plot.plants.each do |plant| %>
      <section id="plant-<%= plant.id %>">
        <li><%= plant.name %> <%= link_to "Remove", "/plots/#{plot.id}/plants/#{plant.id}", method: :delete %></li>
      </section>
    <% end %>
  </section>
<% end %>
